{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/product/**/*",
    "packages/contracts/src/**/*"
  ],
  "exclude": [
    "src/_excluded_prod/**",
    "**/_disabled/**",
    "**/_server_DISABLED/**",
    "**/_report_DISABLED/**",
    "**/_dev_DISABLED/**",
    "**/__tests__/**",
    "src/api/**",
    "src/index.ts"
  ]
}
