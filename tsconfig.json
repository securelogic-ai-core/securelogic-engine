{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "exactOptionalPropertyTypes": true
  },
  "include": [
    "src/index.ts",
    "src/engine/**/*"
  ],
  "exclude": [
    "**/_dev_DISABLED/**",
    "**/_server_DISABLED/**",
    "**/_report_DISABLED/**",
    "**/_product_DISABLED/**",
    "**/_legacy/**",
    "**/_wip/**",
    "**/_quarantine/**",
    "**/node_modules/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "test/**",
    "tests/**"
  ]
}