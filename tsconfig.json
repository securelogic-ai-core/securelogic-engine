{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/_dev_DISABLED/**",
    "**/_server_DISABLED/**",
    "**/_report_DISABLED/**",
    "**/_product_DISABLED/**",
    "**/_legacy/**",
    "**/_wip/**",
    "**/_quarantine/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "test/**",
    "tests/**",
    "node_modules/**"
  ]
}
