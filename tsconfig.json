{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "src/_frozen_prod"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/_disabled_*",
    "src/_excluded_*",
    "src/_dev_*",
    "src/_quarantine",
    "src/_server_DISABLED",
    "src/_report_DISABLED",
    "src/api",
    "src/index.ts",
    "test",
    "test-run.ts"
  ]
}
