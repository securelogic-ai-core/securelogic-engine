{
  "name": "securelogic-engine",
  "version": "0.3.2",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx watch src/api/server.ts",
    "start:dev": "tsx src/api/server.ts",
    "clean": "rm -rf dist",
    "build": "rm -rf dist && tsc -p tsconfig.prod.json",
    "start": "node dist/api/server.js",
    "typecheck": "tsc -p tsconfig.ci.json",
    "lint": "eslint \"src/**/*.{ts,tsx,js}\"",
    "test": "vitest run",
    "test:prod": "vitest run src/_frozen_prod/__tests__",
    "check": "bash scripts/guard-imports.sh && npm run lint && npm run typecheck && npm run build && npm run test:prod",
    "ci": "bash scripts/check-contract-version.sh && npm run typecheck && npm run build",
    "build:contracts": "cd packages/contracts && npm run build"
  },
  "dependencies": {
    "ajv": "~8.17.1",
    "ajv-formats": "~3.0.1",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "json-canonicalize": "^2.0.0",
    "pdfkit": "^0.17.2",
    "pino": "^10.3.0",
    "pino-http": "^11.0.0",
    "redis": "^5.10.0",
    "securelogic-contracts": "^0.1.2",
    "typescript": "~5.9.3",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/node": "~25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-plugin-boundaries": "^5.3.1",
    "tsx": "^4.21.0",
    "vitest": "~4.0.16"
  }
}
