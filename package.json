  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "~25.0.3",
    "typescript": "~5.9.3",
    "vitest": "~4.0.16"
  },
  "dependencies": {
    "ajv": "~8.17.1",
    "ajv-formats": "~3.0.1",
    "better-sqlite3": "^12.6.2",
    "json-canonicalize": "^2.0.0",
    "pdfkit": "^0.17.2",
    "securelogic-contracts": "^0.1.2",
    "zod": "^4.3.4"
  },
  "workspaces": [
    "packages/*"
  ]
}
