{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/api/**/*",
    "src/runtime/**/*",
    "src/index.ts"
  ],
  "exclude": [
    "**/_*",
    "**/*DISABLED*",
    "**/dev/**",
    "**/reports/**",
    "**/product/**",
    "**/server/**",
    "**/excluded/**",
    "**/frozen/**",
    "node_modules",
    "dist"
  ]
}
